<MainButton@Button>:
    id: MainButton
    font_size: 18
    markup: True
    size_hint: 0.25,0.06
    color: 0,0,0,1
<TheScreenManager>:
    MainScreen:
        id: MainScreen
        name: "MainScreen"
<MainScreen>:
    canvas:
        Rectangle:
            source: "periodic-table.png"
            pos: self.x +800, self.y +530
            size: self.width + -40**2, self.height + -33**2
    MainButton:
        text: "[b][font=Arial]EXIT[/b][/font]"
        pos_hint: {"center_x":0.5, "center_y":0.1}
        on_release:
            root.Exit()
